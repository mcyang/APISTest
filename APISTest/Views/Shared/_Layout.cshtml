                            <li>@Html.ActionLink("RDR維護", "Index", "RDRManage")</li>
                            <li><a href="#">報價維護</a></li>
                            <li>@Html.ActionLink("Awarded Check", "Index", "AwardedCheck")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">R&D管理 <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">RFQ-BOM維護</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">CM管理 <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">BOM Mapping</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">IE管理 <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">治工具成本維護</a></li>
                            <li><a href="#">人機工時成本維護</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">PUR管理 <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">詢價資料維護</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">報表管理 <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">管理報表</a></li>
                            <li><a href="#">成本估算單</a></li>
                            <li><a href="#">查詢報價作業進度</a></li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 我的 ASP.NET 應用程式</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryajax")
    @RenderSection("scripts", required: false)
    @RenderSection("styles", required: false)
</body>
</html>
