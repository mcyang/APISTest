
@{
    ViewBag.Title = "Uploads";
}

<h2>Uploads</h2>

@using (Html.BeginForm("Uploads", "Test", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("輸入RDR#:")
            @Html.TextBox("RDRNumber")
        </div>
        <div class="form-group">
            @Html.Label("輸入Project Name:")
            @Html.TextBox("ProjectName")
        </div>
        <div class="form-group">
            @Html.Label("輸入交貨地:")
            @Html.TextBox("Customer")
        </div>
        <div class="form-group">
            @Html.Label("輸入Module:")
            @Html.TextBox("ModuleName")
        </div>
        <div class="form-group">
            @Html.Label("附件上傳:", new { @class = "control-label" })
            <div>
                <input type="file" id="file" name="file" />
                @Html.ValidationMessage("file", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-actions no-color">
        <input type="submit" id="btnSubmit" value="Upload" class="btn btn-success" />
    </div>

}